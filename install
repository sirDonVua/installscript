#!/bin/bash -i 
			

. func/pkg-mangers.sh
. func/extra.sh 
. func/gaming.sh

while getopts  "a b n g h"  flag
do 

	case "${flag}" in 
		
		'r')
           nala && deb-get && extra
	    ;;
#############################################
		'n' ) 
            nix
        ;;
#############################################
		'g')
            nala && deb-get && nix && gaming
	    ;;	
#############################################
        'a')
            nala
            deb-get
            extra
            gaming
        ;;
#############################################
		'h' | *)

		echo 'available argument:
		-a : all
		-r : recommended
		-n : nix install
		-g : gameing packages with nix'
#############################################
    esac
done

eval "$(tail -n +10 < ~/.bashrc)"
