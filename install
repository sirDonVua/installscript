#!/usr/bin/env bash
			
# => SOURCING THE FUNCTIONS
. func/pkg-mangers
. func/gaming
. func/fonts
. func/config-files

# => checking if on fedora or debian or Arch
command -v apt > /dev/null && . func/debian/main
command -v dnf > /dev/null && . func/fedora/main
command -v pacman > /dev/null && . func/Arch/main

while getopts  "a c r n g f h"  flag
do 

	case "${flag}" in 
		
		'r')
           main && nerd_fonts && configs
	        ;;
#############################################
        'c')
            configs
            ;;
#############################################
		'n') 
            nix
            ;;
#############################################
        'f')
            nerd_fonts
            ;;
#############################################
        'a')
            nala
            deb-get
            nix
            main
            gaming
            ;;
#############################################
		'h' | *)

		echo '
        available argument:
		    -a : all
            -c : my config files
		    -r : recommended
		    -n : nix package Manger
            -f : nerd fonts
        '
#############################################
    esac
done

eval "$(tail -n +10 < ~/.bashrc)"
