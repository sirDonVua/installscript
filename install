#!/usr/bin/env bash
			
# => SOURCING THE FUNCTIONS
dir="$(dirname $0)"

. $dir/func/isthere
. $dir/func/fonts
. $dir/func/config-files

# => checking if on fedora, debian or arch
isthere apt && source $dir/func/debian/main
isthere dnf && source $dir/func/fedora/main
isthere pacman && source $dir/func/Arch/main

while getopts  "c r m f h"  flag
do 

	case "${flag}" in 

#--------------------------------------------
		'r')
		    main
		    configs
		    nerd_fonts
	            ;;
#--------------------------------------------

		'm')
		    main
		    ;;
#--------------------------------------------
		'c')
		    configs
		    ;;
#--------------------------------------------
		'f')
		    nerd_fonts
		    ;;
#--------------------------------------------
		'h' | *)

		echo '
        available argument:
            -c : my config files
            -m : main
	    -r : recommended
            -f : nerd fonts
        '
#--------------------------------------------
    esac
done
