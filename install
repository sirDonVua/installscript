#!/usr/bin/env bash
			
# => SOURCING THE FUNCTIONS
. func/pkg-mangers
. func/extra
. func/gaming
. func/fonts
. func/config-files

# => checking if on fedora or debian
command -v apt > /dev/null && . func/debian/main
command -v dnf > /dev/null && . func/fedora/main


while getopts  "a c r n g f h"  flag
do 

	case "${flag}" in 
		
		'r')
           nala && deb-get && main && extra
	        ;;
#############################################
        'c')
            configs
            ;;
#############################################
		'n') 
            nix
            ;;
#############################################
		'g')
            nala && deb-get && nix && gaming
	        ;;	
#############################################
        'f')
            nerd_fonts
            ;;
#############################################
        'a')
            nala
            deb-get
            nix
            extra
            gaming
            ;;
#############################################
		'h' | *)

		echo '
        available argument:
		    -a : all
            -c : my config files
		    -r : recommended
		    -n : nix package Manger
		    -g : gameing packages with nix
            -f : nerd fonts
        '
#############################################
    esac
done

eval "$(tail -n +10 < ~/.bashrc)"
