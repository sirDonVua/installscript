#!/bin/bash -i 
			

. func/pkg-mangers.sh
. func/debian/main
. func/extra
. func/gaming.sh
. func/fonts.sh
. func/config-files.sh

while getopts  "a c r n g f h"  flag
do 

	case "${flag}" in 
		
		'r')
           nala && deb-get && main && extra
	        ;;
#############################################
        'c')
            configs
            ;;
#############################################
		'n') 
            nix
            ;;
#############################################
		'g')
            nala && deb-get && nix && gaming
	        ;;	
#############################################
        'f')
            nerd_fonts
            ;;
#############################################
        'a')
            nala
            deb-get
            nix
            extra
            gaming
            ;;
#############################################
		'h' | *)

		echo '
        available argument:
		    -a : all
            -c : my config files
		    -r : recommended
		    -n : nix package Manger
		    -g : gameing packages with nix
            -f : nerd fonts
        '
#############################################
    esac
done

eval "$(tail -n +10 < ~/.bashrc)"
