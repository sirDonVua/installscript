#!/usr/bin/env bash
			
# => SOURCING THE FUNCTIONS
. func/fonts
. func/config-files

# => checking if on fedora, debian or arch
command -v apt > /dev/null && . func/debian/main
command -v dnf > /dev/null && . func/fedora/main
command -v pacman > /dev/null && . func/Arch/main

while getopts  "a c r n g f h"  flag
do 

	case "${flag}" in 

#############################################
		'r')
           main
           configs
           nerd_fonts
	        ;;
#############################################
        'm')
            main
            ;;
#############################################
        'c')
            configs
            ;;
#############################################
        'f')
            nerd_fonts
            ;;
#############################################
		'h' | *)

		echo '
        available argument:
            -c : my config files
            -m : main
		    -r : recommended
            -f : nerd fonts
        '
#############################################
    esac
done

eval "$(tail -n +10 < ~/.bashrc)"
