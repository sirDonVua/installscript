#!/usr/bin/env bash

main() {

    dir="$(dirname $0)/func/Arch"
    
    # setup the config file
    source $dir/conf
    [[ $use == "false" ]] && echo "pleaze edit $dir/conf file" && exit 0

    # => setup the localtime
    ln -sf /usr/share/zoneinfo/$reg/$cou /etc/localtime
    
    # => hardware clock
    hwclock --systohc
    
    # => localas
    sed -i ' s/#ar_SA.UTF-8 UTF-8/ar_SA.UTF-8 UTF-8/ ' /etc/locale.gen
    sed -i ' s/#en_US.UTF-8 UTF-8/en_US.UTF-8 UTF-8/ ' /etc/locale.gen
    locale-gen
    
    # => hostname
    echo $host > /etc/hostname
    
    # => users and passwords

    # root password
    passwd
    # user
    useradd -m $user ; usermod -aG wheel,audio,video $user
    passwd $user
    
    # => sudoers
    sed -i 's/# %wheel ALL=(ALL:ALL) ALL/%wheel ALL=(ALL:ALL) ALL/' /etc/sudoers
    
    #touchpad config
    mkdir -p /etc/X11/xorg.conf.d/
    cp $dir/30-touchpad.conf /etc/X11/xorg.conf.d/30-touchpad.conf
    
    # => grub
    pacman -Syu grub efibootmgr os-prober dosfstools mtools --noconfirm --needed
    
    case $EFI in
	'y')
            mkdir -p /boot/efi
	    mount $EFIpart /boot/efi
            grub-install /boot/efi --recheck
            grub-mkconfig -o /boot/grub/grub.cfg
            ;;
	
	
	'n')
            grub-install $EFIdisk
            grub-mkconfig -o /boot/grub/grub.cfg
            ;;
	
	*)
	    echo "!@!#$@!" > /dev/null
	    ;;
	
    esac

    # => aura package manager
    source $dir/aura && aura
    
    # => packages
    aura -Syu - < $dir/PKGS --noconfirm --needed ||
	pacman -Syu - < $dir/PKGS --noconfirm --needed
    aura -A - < $dir/AUR --noconfirm --needed || echo "oops" & sleep 3
    
    # => system services
    systemctl enable libvirtd sddm NetworkManager bluetooth

    # => virt manager network
    virsh net-start default
    virsh net-autostart default

    # => changing into normal user
    su $user

}
