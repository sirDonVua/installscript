#!/usr/bin/env bash


configs() {

    dir=$(dirname $0)
    command="cp"
    [[ $1=="link" ]] && command="ln"
    
    git clone https://github.com/sirDonVua/mydotfiles
    dot-files=(".bashrc" ".bashrc-func" ".vimrc" ".emacs")

    for i in $dot-files[@] ; do
	$command $dir/mydotfiles/$i ~/
    done

    $command $dir/mydotfiles/.config/* ~/.config/
    rm -rf $dir/mydotfiles
    
}
